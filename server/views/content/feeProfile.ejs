                    </div>

                    <div>
                        <label for="assemblyDesc">Assembly: </label>
                        <textarea name="assemblyDesc" id="assemblyDesc"></textarea>
                    </div>

                    <div>
                        <label for="qualityDesc">Quality: </label>
                        <textarea name="qualityDesc" id="qualityDesc"></textarea>
                    </div>

                    <div>
                        <label for="packDesc">Pack & Ship: </label>
                        <textarea name="packDesc" id="packDesc"></textarea>
                    </div><br>

                    <div class="mb-3">
                        
                        <input type="file" id="myFile" name="myFile">
                    </div><br>

                    <div id="saveAndcancelBtn">
                        <div>
                        <button type="submit">Save</button>
                        <input type="button" onclick="history.go()" value="Cancel">
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
