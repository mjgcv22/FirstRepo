    <div class="addCustomer">
        <% if(typeof username == 'string' && username) { %>
            <button id="addBtn">Add Customer</button>
            <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Customer List</th>
                  </tr>
                </thead>
                <tbody>
                    <%if (records.length > 0){ %>
                        <% records.forEach(function(row){ %>
                        <tr>
                          <td id="myProfile" onclick=displayProfile()><%= row.customerName %></td>
                        </tr>
                        <% })}else{ %>
                          <tr>
                              <td colspan="6">No Customer Profile available</td>
                            </tr>
                        <% } %>
                </tbody>
            </table>
            <%} else {%>
                <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">Customer List</th>
                      </tr>
                    </thead>
                    <tbody>
                        <%if (records.length > 0){ %>
                            <% records.forEach(function(row){ %>
                            <tr>
                              <td id="myProfile" onclick=displayProfile()><%= row.customerName %></td>
                            </tr>
                            <% })}else{ %>
                              <tr>
                                  <td colspan="6">No Customer Profile available</td>
                                </tr>
                            <% } %>
                    </tbody>
                </table>
            <% } %>
    </div>
    <div class="customerContent" id="toDisplay" style="display: none;" onclick="toDisplay">

        <h2>New Customer Information</h2>
        <div class="infoContainer">
            <form action="/feeProfile" method="POST" enctype="multipart/form-data">
                <div class="labels">
                    <label for="customerName">Customer Name: </label>
                    <input type="text" placeholder=" Customer Name" id="customerName" name="customerName">
                    <div>
